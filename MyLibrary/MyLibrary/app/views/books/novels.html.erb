<h1>Novels</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Reading level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @books.each do |book| %> 
<tr>
	<% if book.number_of_pages >=240 %>
		<td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.reading_level %></td>
    <% end %>
</tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Home', root_path %>
<%= link_to 'All Books', books_path %>
<%= link_to 'New Book', new_book_path %>